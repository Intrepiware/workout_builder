@model HomeContactRequestModel;
@addTagHelper "BotDetect.Web.Mvc.CaptchaTagHelper, BotDetect.Web.Mvc"

@{
    ViewData["Title"] = "Contact";
}

@section header {
    <link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl"
          rel="stylesheet" type="text/css" />
}

<section class="section">
    <div class="container is-max-desktop">
        @if (ViewBag.Success != null)
        {
            <p class="notification is-success is-light">
                @ViewBag.Success
            </p>
        }
        @using (Html.BeginForm(FormMethod.Post))
        {
            <div class="content">
                <p>Drop me a line just to say hello or make suggestions of how to improve this tool.</p>
            </div>
            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" name="name" type="text" placeholder="Bob Smith" required asp-for="Name">
                </div>
            </div>
            <p class="help is-danger">
                <span asp-validation-for="Name"></span>
            </p>

            <div class="field">
                <label class="label">Location</label>
                <div class="control">
                    <input class="input" name="location" type="text" placeholder="Anywhereville, TX" required asp-for="Location">
                </div>
            </div>
            <p class="help is-danger">
                <span asp-validation-for="Location"></span>
            </p>

            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" name="email" type="email" placeholder="hello@@mywebsite.com" required asp-for="Email">
                </div>
            </div>
            <p class="help is-danger">
                <span asp-validation-for="Email"></span>
            </p>

            <div class="field">
                <label class="label">Subject</label>
                <div class="control">
                    <input class="input" name="subject" type="text" placeholder="This tool rules!" required asp-for="Subject">
                </div>
            </div>
            <p class="help is-danger">
                <span asp-validation-for="Subject"></span>
            </p>

            <div class="field">
                <label class="label">Message</label>
                <div class="control">
                    <textarea class="textarea" name="message" required asp-for="Message"></textarea>
                </div>
            </div>
            <p class="help is-danger">
                <span asp-validation-for="Message"></span>
            </p>

            <div class="columns is-desktop">
                <div class="column is-half">
                    <div class="field">
                        <label class="label" asp-for="CaptchaCode">Retype the code from the picture:</label>
                        <captcha id="ContactFormCaptcha" user-input-id="CaptchaCode" />

                        <div class="control">
                            <input asp-for="CaptchaCode" class="input" required />
                        </div>
                        <p class="help is-danger">
                            <span asp-validation-for="CaptchaCode"></span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-info">Submit</button>
                </div>
                <div class="control">
                    <a href="@Url.Action("Index")" class="button is-link is-light">Cancel</a>
                </div>
            </div>
        }
    </div>
</section>