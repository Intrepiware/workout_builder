@{
    ViewData["Title"] = "Contact";
}


<section class="section">
    <div class="container is-max-desktop">
        @using (Html.BeginForm(FormMethod.Post))
        {
            <div class="content">
                <p>Drop me a line just to say hello or make suggestions of how to improve this tool.</p>
            </div>
            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" name="name" type="text" placeholder="Bob Smith" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Location</label>
                <div class="control">
                    <input class="input" name="location" type="text" placeholder="Anywhereville, TX" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" name="email" type="email" placeholder="hello@@mywebsite.com" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Subject</label>
                <div class="control">
                    <input class="input" name="subject" type="text" placeholder="This tool rules!" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Message</label>
                <div class="control">
                    <textarea class="textarea" name="message" required></textarea>
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Submit</button>
                </div>
                <div class="control">
                    <a href="@Url.Action("Contact")" class="button is-link is-light">Cancel</a>
                </div>
            </div>
        }
    </div>
</section>